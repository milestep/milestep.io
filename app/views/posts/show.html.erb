<%= render "welcome/header" %>
<div class="blog_image_container transperent">
  <div class="container">
    <div class="row">
        <%= image_tag "blog/logo", class: "blog_logo" %>
        <div class="blog_search_container">
          <label for="blog_search_input">
            <%= image_tag "blog/search", class: "search_icon" %>
          </label>
          <input type="text" class="blog_search" id="blog_search_input" placeholder="SEARCH" />
        </div>
      </div>
  </div>
  <div class="post_photo"></div>
  <div class="container post_main_container">
    <div class="row">
      <%= @post.title %>

      <%= @post.body %>
    </div>  
  </div>

</div>
<%= render "welcome/footer" %>